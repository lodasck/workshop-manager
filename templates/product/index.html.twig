{% extends 'base.html.twig' %}

{% block title %}Product Index{% endblock %}

{% block body %}
    <h1>Product List</h1>

    <div class="mt-6 flex justify-between">
        <a href="{{ path('product_new') }}">Create new</a>
    </div>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>
                        {{ product.name }}
                        <button class="btn"><a href="{{ path('product_show', {'id': product.id}) }}">view</a></button>
                        <button class="btn"><a href="{{ path('product_edit', {'id': product.id}) }}">edit</a></button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="mt-6 flex justify-between">
        <a href="{{ path('app_dashboard') }}" class="text-white bg-gray-500 hover:bg-gray-700 font-bold py-2 px-4 rounded">Back to dashboard</a>
    </div>
{% endblock %}
