{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="min-h-screen bg-orange-300 p-4">

        <div class="bg-yellow-100 shadow-md rounded-lg p-6 mb-4">
            <h1 class="text-2xl font-bold mb-4 text-center text-gray-500">Détails du produit</h1>
            <div class="flex justify-between items-center">
                <a href="{{ path('product_index') }}" class="text-white bg-gray-400 hover:bg-gray-700 font-bold py-2 px-4 rounded">
                    Retour à la liste
                </a>
            </div>
        </div>

        <div class="bg-yellow-100 shadow-md rounded-lg p-6 flex">
        <div class="w-1/3 flex items-center justify-center">
                {% if product.image %}
                    <img src="{{ asset('uploads/img_produits/' ~ product.image) }}" alt="{{ product.name }}" class="w-90 h-auto object-cover rounded-lg">
                {% endif %}
            </div>
            <div class="w-2/3">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead>
                        <tr>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Propriété</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Détail</th>
                        </tr>
                    </thead>
                    <tbody class="bg-gray-100 divide-y divide-gray-200">
                        <tr>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm font-medium text-gray-900">Nom</td>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm text-gray-700">{{ product.name }}</td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm font-medium text-gray-900">Description</td>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm text-gray-700">{{ product.description }}</td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm font-medium text-gray-900">Quantité</td>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm text-gray-700">{{ product.stock }}</td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm font-medium text-gray-900">Ajouté le</td>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm text-gray-700">{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm font-medium text-gray-900">Mis à jour le</td>
                            <td class="px-6 py-4 text-center whitespace-nowrap text-sm text-gray-700">{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
