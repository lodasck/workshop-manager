{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-orange-300">
    <a href="{{ path('app_home') }}" class="absolute top-4 left-4">
        <button type="button" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-green-600 shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">Accueil</button>
    </a>
        <div class="w-full max-w-md p-8 bg-yellow-100 shadow-md rounded-lg">
            <h1 class="text-2xl font-bold mb-6 text-center">Veuillez vous inscrire</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-4' } }) }}
                <div>
                    {{ form_label(registrationForm.userName, null, { 'attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                    {{ form_widget(registrationForm.userName, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' } }) }}
                    {{ form_errors(registrationForm.userName, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
                </div>

                <div>
                    {{ form_label(registrationForm.email, null, { 'attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                    {{ form_widget(registrationForm.email, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' } }) }}
                    {{ form_errors(registrationForm.email, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', { 'attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' } }) }}
                    {{ form_errors(registrationForm.plainPassword, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'mr-2' } }) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', { 'attr': { 'class': 'text-sm text-gray-600' } }) }}
                    {{ form_errors(registrationForm.agreeTerms, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
                </div>

                <div class="flex justify-center">
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        S'inscrire
                    </button>
                </div>

                <p class="mt-4 text-sm text-gray-600 text-center">Déjà inscrit(e) ? <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Me connecter</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
