{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="min-h-screen" style="background-image: url('{{ asset('images/accueil.jpg') }}'); background-size: cover; background-repeat: no-repeat;">
    <a href="{{ path('app_login') }}" class="absolute mt-4 right-4">
        <button type="button" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-green-600 shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">Se connecter</button>
    </a>
    <a href="{{ path('app_register') }}" class="absolute mt-4 right-40">
        <button type="button" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-green-600 shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">S'inscrire</button>
    </a>

    <div class="flex items-center justify-end min-h-screen mr-8">
        <div class="bg-yornge shadow-lg rounded-lg p-6 w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center text-white">Contactez nous !</h1>

            {% if app.session.flashBag.has('success') %}
                <div class="alert alert-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ app.session.flashBag.get('success')[0] }}</span>
                </div>
            {% endif %}

            {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}

            <div>
                {{ form_label(form.Email, null, { 'attr': { 'class': 'block text-sm font-medium text-blue-900' } }) }}
                {{ form_widget(form.Email, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 bg-gray-200 divide-y divide-gray-200 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' } }) }}
                {{ form_errors(form.Email, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
            </div>
            
            <div>
                {{ form_label(form.Objet, null, { 'attr': { 'class': 'block text-sm font-medium text-blue-900' } }) }}
                {{ form_widget(form.Objet, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 bg-gray-200 divide-y divide-gray-200 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' } }) }}
                {{ form_errors(form.Objet, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
            </div>
            
            <div>
                {{ form_label(form.Contenu, null, { 'attr': { 'class': 'block text-sm font-medium text-blue-900' } }) }}
                {{ form_widget(form.Contenu, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 bg-gray-200 divide-y divide-gray-200 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm' } }) }}
                {{ form_errors(form.Contenu, { 'attr': { 'class': 'mt-2 text-sm text-red-600' } }) }}
            </div>
            
            <button type="submit" class="inline-flex items-center justify-center w-full px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Envoyer</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}